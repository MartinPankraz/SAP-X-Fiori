<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Popover
		title="{Name}"
		class="sapUiResponsivePadding--header sapUiResponsivePadding--footer"
		placement="Bottom"
		initialFocus="task">
		
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button
					id="task"
					text="Create Task"
					press="handleItemPress" />
			</OverflowToolbar>
		</footer>
	</Popover>
</core:FragmentDefinition>