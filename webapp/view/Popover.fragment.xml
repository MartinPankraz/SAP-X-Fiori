<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Popover
		title="{i18n>crmPpopoverTitle}"
		class="sapUiResponsivePadding--header sapUiResponsivePadding--footer"
		placement="Bottom"
		initialFocus="task">
		<Input  id="userInput"
				placeholder="Bad sentiment detected!"
				description="Task-Title"
				width="400px"
				fieldWidth="60%"
				class="sapUiSmallMarginBottom"/>
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button
					id="task"
					text="{i18n>CreateTask}"
					press="handleItemPress" />
				<Button
					id="cancel"
					text="{i18n>Cancel}"
					press="handleCancelPress" />
			</OverflowToolbar>
		</footer>
	</Popover>
</core:FragmentDefinition>